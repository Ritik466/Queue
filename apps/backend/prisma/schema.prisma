generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. THE DOCTOR / PROVIDER
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed
  name      String
  phone     String?
  role      Role     @default(PROVIDER)
  createdAt DateTime @default(now())

  // Relations
  clinic    Clinic?
}

// 2. THE CLINIC (A doctor belongs to a clinic)
model Clinic {
  id        String   @id @default(uuid())
  name      String
  address   String?
  ownerId   String   @unique
  owner     User     @relation(fields: [ownerId], references: [id])

  // The Queue
  queue     Patient[]

  // The Appointment
  appointments Appointment[]
}

// 3. THE PATIENT (The Queue Items)
model Patient {
  id          String      @id @default(uuid())
  token       Int         // The "42" number
  name        String
  phone       String?
  type        VisitType   @default(CHECKUP)
  status      QueueStatus @default(WAITING)

  arrivalTime DateTime    @default(now())
  servedTime  DateTime?   // When did the doctor press "Call Next"?
  completedTime DateTime? // When did the session end?

  clinicId    String
  clinic      Clinic      @relation(fields: [clinicId], references: [id])
}

// 4. The Appointment
model Appointment {
  id        String   @id @default(uuid())
  clinicId  String
  clinic    Clinic   @relation(fields: [clinicId], references: [id])

  patientName  String
  date         String   // Format: "2023-10-12"
  time         String   // Format: "10:30 AM"
  status       String   @default("CONFIRMED") // CONFIRMED, CANCELLED, COMPLETED

  createdAt DateTime @default(now())
}

// 5. INSTANT QUEUE (The USP Feature)
// Used for Salons, Banks, PBL, Events - anything needing a quick queue.
model CustomSession {
  id          String   @id @default(uuid())
  hostName    String   // The person running the queue
  title       String   // "PBL Review", "City Salon", "Table 5"
  joinCode    String   @unique // Simple 6-digit code
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  participants SessionParticipant[]
}

model SessionParticipant {
  id        String   @id @default(uuid())
  name      String
  token     Int      // 1, 2, 3...
  status    String   @default("WAITING") // WAITING, SERVING, COMPLETED
  joinedAt  DateTime @default(now())

  sessionId String
  session   CustomSession @relation(fields: [sessionId], references: [id])
}

// --- ENUMS (Strict Typing) ---
enum Role {
  PATIENT
  PROVIDER
  ADMIN
  STAFF
}

enum VisitType {
  CHECKUP
  EMERGENCY
  REPORT
  FOLLOWUP
}

enum QueueStatus {
  WAITING
  SERVING
  COMPLETED
  MISSED
}
